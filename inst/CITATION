pkgVer <- function(pkg) {
    if (!exists("meta") || is.null(meta)) meta <- packageDescription(pkg)
    ver <- meta$Version
    paste0('https://github.com/j-andrews7/halfBaked/', pkg, ' - R package version ', ver)
}

c(
    bibentry(bibtype="manual",
        title = "halfBaked",
        author = personList(
            as.person("Jared", "Andrews", role = "aut"),
        ),
        year = format(Sys.Date(), "%Y"),
        note = pkgVer('halfBaked')
    )
)
